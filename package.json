{
  "name": "template-master-sidebar",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:pwa": "cross-env BUILD_TARGET=pwa vite",
    "dev:extension": "cross-env BUILD_TARGET=extension vite",
    "build": "npm run build:pwa && npm run build:extension",
    "build:pwa": "cross-env BUILD_TARGET=pwa vite build",
    "build:extension": "cross-env BUILD_TARGET=extension vite build",
    "preview": "vite preview",
    "preview:pwa": "cross-env BUILD_TARGET=pwa vite preview --outDir dist-pwa",
    "generate-icons": "node scripts/generate-icons.js",
    "deploy": "npm run build:pwa && firebase deploy",
    "deploy:github-pages": "gh-pages -d dist-pwa",
    "deploy:all": "npm run build && git push && npm run deploy && npm run deploy:github-pages"
  },
  "dependencies": {
    "firebase": "^12.6.0",
    "lucide-react": "^0.556.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.1.0",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-window": "^7.4.0"
  }
}
